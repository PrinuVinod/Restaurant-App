    <script>
        function showNotification(message, type) {
            const notificationArea = document.getElementById('notification-area');
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            notification.style.position = 'absolute';
            notificationArea.appendChild(notification);
            setTimeout(() => {
                notification.remove();
            }, 2000);
        }

        const scriptURL = 'https://script.google.com/macros/s/AKfycbwqCPTX_Gn0_uxEZ7Iizse70qv-ZQpFR__iUYy4xfFmvs7g8s8SpntFZhnFGLULWDDRpw/exec';
        const form = document.getElementById('feedbackform');

        form.addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            try {
                showNotification('Submitting your form...', 'loading');
                const response = await fetch(scriptURL, {
                    method: 'POST',
                    body: formData,
                });

                if (response.ok) {
                    showNotification('Thank you! Your form was submitted successfully.', 'success');
                    resetform();
                } else {
                    showNotification('Your form was not Submitted.', 'error');
                    console.error('Failed to submit the form');
                }
            } catch (error) {
                showNotification('Your form was not Submitted.', 'error');
                console.error('Error submitting the form:', error);
            }
        });

        function resetform() {
            form.reset();
        }
    </script>
